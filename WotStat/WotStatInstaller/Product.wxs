            </Component>
            <Component Id="WotStatConfig">
                <File Source="$(var.WotStat.TargetDir)WotStat.exe.config" />
            </Component>
            <Component Id="WotStatServiceConfig">
                <File Source="$(var.WotStat.TargetDir)WotStatService.dll.config" />
            </Component>
        </ComponentGroup>
    </Fragment>
</Wix>
